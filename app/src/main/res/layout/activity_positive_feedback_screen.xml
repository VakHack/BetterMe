<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#833CA6"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="roeevakrat.betterme.PositiveFeedbackScreen">

    <ImageView
        android:id="@+id/backFromPositive"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"/>

    <TextView
        android:id="@+id/positiveFeedbackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/backFromPositive"
        android:paddingBottom="10dp"
        android:text="Great\nWork!"
        android:textColor="#FFD15C"
        android:textSize="55sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/positiveFeedbackBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/positiveFeedbackTitle"
        android:lineSpacingExtra="3sp"
        android:paddingBottom="25dp"
        android:text="You lost some of you bad behavior over the last 7 days!"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/positiveFeedbackBody"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/trophy"/>
</RelativeLayout>
