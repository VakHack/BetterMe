<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#489DD2"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="20dp"
    tools:context="roeevakrat.betterme.CloudSyncScreen">


    <ImageView
        android:id="@+id/syncScreenBackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"/>

    <TextView
        android:id="@+id/syncScreenTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sync your data to our cloud "
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/syncScreenBackButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/syncScreenText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/syncScreenTitle"
        android:layout_alignStart="@+id/syncScreenTitle"
        android:layout_below="@+id/syncScreenTitle"
        android:layout_marginTop="15dp"
        android:text="For a frequent progress backup and to use BetterMe on all of your devices."
        android:textColor="#FAD36C"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/loginFeedback"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/syncScreenText"
        android:layout_marginTop="20dp"
        android:text="@string/loginFeedback"
        android:textAlignment="textStart"
        android:textColor="@color/holo_red_dark"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/syncScreenBackButton"
        android:layout_below="@+id/loginFeedback"
        android:layout_marginTop="15dp"
        android:hint="Username or email"
        android:imeActionId="@+id/login"
        android:textColor="@color/White"
        android:textColorHint="@color/White"/>

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/loginEmail"
        android:layout_marginTop="11dp"
        android:hint="Password"
        android:imeActionId="@+id/login"
        android:textColor="@color/White"
        android:textColorHint="@color/White"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/loginPassword"
        android:layout_marginTop="20dp"
        android:background="#0E4160"
        android:text="Login"
        android:textColor="#F7AB00"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/loginButton"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:text="Register"
        android:textColor="@color/DarkSlateGray"/>

</RelativeLayout>
