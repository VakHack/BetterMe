<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#489DD2"
    tools:context="roeevakrat.betterme.CounterScreen">

    <RelativeLayout
        android:id="@+id/upperLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/resetCounter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/minus"/>

        <ImageView
            android:id="@+id/chartButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/helpButton"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/line_chart"/>

        <ImageView
            android:id="@+id/helpButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left|center_vertical|center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:baselineAlignBottom="false"
            app:srcCompat="@drawable/question"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/upperLayout">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/date"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/tommorowButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/date"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_white_24dp"/>

        <ImageView
            android:id="@+id/yesterdayButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/date"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLayout">

        <TextView
            android:id="@+id/counterTitleTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="2dp"
            android:paddingTop="10dp"
            android:text="Daily"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FAD36C"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/counterTitleMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/counterTitleTop"
            android:layout_centerInParent="true"
            android:paddingBottom="2dp"
            android:text="Bad-Habbit"
            android:textColor="#FAD36C"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/counterTitleBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/counterTitleMid"
            android:layout_centerInParent="true"
            android:text="Counter"
            android:textColor="#FAD36C"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/counterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/counterTitleBottom"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/TodaysCounter"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="55sp"
            tools:text="0"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/middleLayout"
        >

        <ImageView
            android:id="@+id/pressedButton"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/counterButton"
            android:baselineAlignBottom="false"
            android:paddingBottom="25dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/dislike_pressed"/>

        <ImageView
            android:id="@+id/counterButton"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:baselineAlignBottom="false"
            android:paddingBottom="25dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/dislike"/>

    </FrameLayout>

</RelativeLayout>
