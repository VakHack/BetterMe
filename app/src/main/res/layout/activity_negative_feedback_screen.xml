<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#747D7E"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="roeevakrat.betterme.NegativeFeedbackScreen">

    <ImageView
        android:id="@+id/backFromNegative"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"/>

    <TextView
        android:id="@+id/negativeFeedbackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/backFromNegative"
        android:paddingBottom="10dp"
        android:text="Try\nHarder."
        android:textColor="#FFD15C"
        android:textSize="55sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/negativeFeedbackBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/negativeFeedbackTitle"
        android:paddingBottom="25dp"
        android:text="This week you have shown no significant improvement."
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/goal"
        android:layout_below="@+id/negativeFeedbackBody"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
