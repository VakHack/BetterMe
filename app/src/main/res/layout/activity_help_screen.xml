<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#489DD2"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    tools:context="roeevakrat.betterme.HelpCounterScreen">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"/>

    <TextView
        android:id="@+id/helpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/backButton"
        android:paddingBottom="30dp"
        android:paddingLeft="5dp"
        android:paddingTop="20dp"
        android:text="Keep Track of Your Daily Progress."
        android:textColor="#FAD36C"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/helpBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helpTitle"
        android:lineSpacingExtra="3sp"
        android:paddingLeft="5dp"
        android:text="Press the counter button for each occurance of your unwanted behavior.\n\nThe results will be saved according to date, eventually creating your individual progress statistics."
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:textStyle="bold"/>
</RelativeLayout>
