<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#984A59"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    tools:context="roeevakrat.betterme.HelpChartScreen">

    <ImageView
        android:id="@+id/backToWeeklyChart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:tint="#FFF1A8"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"/>

    <TextView
        android:id="@+id/WeeklyChartHelpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/backToWeeklyChart"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingTop="25dp"
        android:text="Get The Big Picture."
        android:textColor="#FFF1A8"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/WeeklyChartHelpBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/WeeklyChartHelpTitle"
        android:lineSpacingExtra="5sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="In this screen you will be able to monitor your week-to-week progress.\n\nView your weekly trend estimation via pressing the upper-right button."
        android:textColor="#FF8F56"
        android:textSize="27sp"
        android:textStyle="bold"/>

</RelativeLayout>
